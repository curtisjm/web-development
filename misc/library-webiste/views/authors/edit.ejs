<h2 class="page-header">Edit Author</h2>
<!-- where we put fields for our author and submit button -->
<form action="/authors/<%= author.id %>?_method=PUT" method="POST">
    <!-- use shared input file because inputs code will be shared -->
    <!-- import fields from partial code file -->
    <%- include('_form_fields') %>
    <div class="form-row form-row-end btn-row">
        <a class="btn btn-danger" href="/authors/<%= author.id %>">Cancel</a>
        <button class="btn btn-primary" type="submit">Update</button>
    </div>
</form>